            { letter: 'Р', companions: ['Руанда', 'Румыния', 'Россия'] },
            { letter: 'С', companions: ['Сальвадор', 'Самоа', 'Сан-Марино', 'Саудовская Аравия', 'Сейшелы', 'Сенегал', 'Сербия', 'Сингапур', 'Сирия', 'Словакия', 'Словения', 'США'] },
            { letter: 'Т', companions: ['Таджикистан', 'Таиланд', 'Танзания', 'Того', 'Тонга', 'Тринидад и Тобаго', 'Тувалу', 'Тунис', 'Туркмения', 'Турция'] },
            { letter: 'У', companions: ['Уганда', 'Узбекистан', 'Украина', 'Уругвай'] },
            { letter: 'Ф', companions: ['Фиджи', 'Филиппины', 'Финляндия', 'Франция'] },
            { letter: 'Х', companions: ['Хорватия'] },
