            { letter: 'Ш', companions: ['Швейцария', 'Швеция', 'Шри-Ланка'] },
            { letter: 'Э', companions: ['Эквадор', 'Эритрея', 'Эсватини', 'Эстония', 'Эфиопия'] },
            { letter: 'Ю', companions: ['ЮАР', 'Южный Судан'] },
            { letter: 'Я', companions: ['Ямайка', 'Япония'] }
        ]

    section.companions-filter
        .companions-filter__container
            .companions-filter__buttons.container
                button(type="button").companions-filter__button
                    +icon('icon-filter', 23,15)
                    span Фильтрация по странам
                    span Показать все
                    +icon('icon-point',34,6)
                ul
                    li 
                        button(type="button") Европа
                    li 
                        button(type="button") Азия
                    li 
                        button(type="button") Америка
                    li 
                        button(type="button") Острова
            .companions-filter__wrapper
                ul.companions-filter__list.container
                    each item in alphabetList
                        li.companions-filter__item
                            h3= item.letter
                            ul
                                each country in item.companions
                                    li= country
                    button(type="button") 
                        +icon("icon-cross",22,24)
                        span Свернуть
        .companions-filter__result.container
            .companions-filter__cards
                ul.companions-filter__cards-list
                    li 
                        a(href="#").companions-card
                            .companions-card__img
                                +picture("content", "user-1", "png", 285,286,"")
                            .companions-card__text
                                .companions-card__wrapper
                                    h3 Таня Фирсова
                                    ul.companions-card__hashtags 
                                        li #ЗОЖ 
                                        li #ПП 
                                        li #Фитнес 
                                        li #пляж
                                        li #авокадо
                                        li #смузи
                                .companions-card__counries
                                    ul
                                        li 
                                            +picture("content","sri-lanka-flag","png",35,24,"")
                                            p Шри-ланка
                                        li 
                                            +picture("content","thailand-flag","png",35,24,"")
                                            p Таиланд
                                        li 
                                            +picture("content","seychelles-flag","png",35,24,"")
                                            p Сейшелы
                                .companions-card__transport
                                    ul
                                        li 
                                            +icon("icon-plane",24,22).is-active
                                        li
                                            +icon("icon-bus",19,20)
                                        li
                                            +icon("icon-bicycle",26,25)
                                        li
                                            +icon("icon-run",23,24)
                                .companions-card__level.level.level--light
                                    .level__big-circle
                                        .level__level(style="--level: 99%;")
                                            .level__circle
                                                .level__number 99
                                                    .level__label level
                    li 
                        a(href="#").companions-card
                            .companions-card__img
                                +picture("content", "user-2", "png", 285,285,"")
                            .companions-card__text
                                .companions-card__wrapper
                                    h3 Петя Демин
                                    ul.companions-card__hashtags 
                                        li #бургер 
                                        li #бар 
                                        li #футбол
                                        li #концерт
                                        li #крафт
                                .companions-card__counries
                                    ul
                                        li 
                                            +picture("content","belgium-flag","png",35,24,"")
                                            p Бельгия
                                        li 
                                            +picture("content","czech-flag","png",35,24,"")
                                            p Чехия
                                .companions-card__transport
                                    ul
                                        li 
                                            +icon("icon-plane",24,22).is-active
                                        li
                                            +icon("icon-bus",19,20).is-active
                                        li
                                            +icon("icon-bicycle",26,25)
                                        li
                                            +icon("icon-run",23,24).is-active
                                .companions-card__level.level.level--light
                                    .level__big-circle
                                        .level__level(style="--level: 80%;")
                                            .level__circle
                                                .level__number 80
                                                    .level__label level
                                .companions-card__button 
                                    button(type="button") Позвать!
                                    .companions-card__likes-counter 
                                        span 
                                            +icon("icon-heart", 15, 15)
                                        p 1500
                    li 
                        a(href="#").companions-card
                            .companions-card__img
                                +picture("content", "user-3", "png", 285,285,"")
                            .companions-card__text
                                .companions-card__wrapper
                                    h3 Марк Смолов
                                    ul.companions-card__hashtags 
                                        li #рэп 
                                        li #тату 
                                        li #хайпбист
                                        li #кроссовки
                                        li #суприм
                                .companions-card__counries
                                    ul
                                        li 
                                            +picture("content","usa-flag","png",35,24,"")
                                            p США
                                        li 
                                            +picture("content","australia-flag","png",35,24,"")
                                            p Австралия
                                        li 
                                            +picture("content","czech-flag","png",35,24,"")
                                            p Доминика
                                .companions-card__transport
                                    ul
                                        li 
                                            +icon("icon-plane",24,22).is-active
                                        li
                                            +icon("icon-bus",19,20)
                                        li
                                            +icon("icon-bicycle",26,25).is-active
                                        li
                                            +icon("icon-run",23,24)
                                .companions-card__level.level.level--light
                                    .level__big-circle
                                        .level__level(style="--level: 25%;")
                                            .level__circle
                                                .level__number 25
                                                    .level__label level
                                .companions-card__button 
                                    button(type="button") Позвать!
                                    .companions-card__likes-counter 
                                        span 
