                                    ul.companions-card__hashtags 
                                        li #образование 
                                        li #карьера 
                                        li #учеба
                                        li #линкедин
                                .companions-card__counries
                                    ul
                                        li 
                                            +picture("content","britain-flag","png",35,24,"")
                                            p Великобритания
                                        li 
                                            +picture("content","germany-flag","png",35,24,"")
                                            p Германия
                                .companions-card__transport
                                    ul
                                        li 
                                            +icon("icon-plane",24,22).is-active
                                        li
                                            +icon("icon-bus",19,20).is-active
                                        li
                                            +icon("icon-bicycle",26,25)
                                        li
                                            +icon("icon-run",23,24)
