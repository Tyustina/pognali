                        button(type="button", aria-label="Вперед").companions-filter__pagination-button.companions-filter__pagination-button--next
                            +icon("pagination-arrow",13,20)

            .companions-filter__form 
                .form
                    h2 Подберите идеального попутчика
                    form.form__wrapper(action="#" method="post")
                        fieldset
                            legend Хобби
                                +icon("arrow",10,6)
                            .form__accordeon-content
                                ul.form__options-list
                                    li 
                                        label(for="hobby1") Спорт
                                            input(type="checkbox" name="hobby" value="rock" id="hobby1" checked).form__input.visually-hidden
                                            span.form__checkbox-marker
                                                +icon("icon-check",11,11.3)
                                    li 
                                        label(for="hobby2") Чтение
                                            input(type="checkbox" name="hobby" value="rap" id="hobby2").form__input.visually-hidden
                                            span.form__checkbox-marker
                                                +icon("icon-check",11,11.3)
                                    li 
                                        label(for="hobby3")  Диван
                                            input(type="checkbox" name="hobby" value="evro" id="hobby3").form__input.visually-hidden
                                            span.form__checkbox-marker
                                                +icon("icon-check",11,11.3) 
                        fieldset 
                            legend Музыка
                            #music-content.form__accordeon-content.is-open
                                ul.form__options-list    
                                    li 
                                        label(for="music1") Тяжелый рок
                                            input(type="checkbox" name="music" value="rock" id="music1").form__input.visually-hidden
                                            span.form__checkbox-marker
                                                +icon("icon-check",11,11.3)
                                    li 
                                        label(for="music2") Русский рэп
                                            input(type="checkbox" name="music" value="rap" id="music2").form__input.visually-hidden
                                            span.form__checkbox-marker
                                                +icon("icon-check",11,11.3)
                                    li 
                                        label(for="music3")  Евроденс
                                            input(type="checkbox" name="hobby" value="evro" id="music3").form__input.visually-hidden
                                            span.form__checkbox-marker
                                                +icon("icon-check",11,11.3)
                        fieldset 
                            legend Еда
                            .form__accordeon-content
                                ul.form__options-list    
                                    li 
                                        label(for="food1") Мясоед
                                            input(type="checkbox" name="food" value="meat" id="food1").form__input.visually-hidden
                                            span.form__checkbox-marker
                                                +icon("icon-check",11,11.3)
                                    li 
                                        label(for="food2") Сидит на ПП
                                            input(type="checkbox" name="food" value="pp" id="food2").form__input.visually-hidden
                                            span.form__checkbox-marker
                                                +icon("icon-check",11,11.3)
                                    li 
                                        label(for="food3") Веган-сыроед
                                            input(type="checkbox" name="food" value="vegan" id="food3").form__input.visually-hidden
                                            span.form__checkbox-marker
                                                +icon("icon-check",11,11.3)
                        fieldset 
                            legend Транспорт
                            .form__accordeon-content.is-open
                                ul.form__options-list.form__transport-list   
                                    li
                                        label
                                            input(type="checkbox" name="transport" value="plane" checked).form__transport-input.visually-hidden
                                            span
                                                +icon("icon-plane",24,22)
                                    li
                                        label
                                            input(type="checkbox" name="transport" value="bus" checked).form__transport-input.visually-hidden
                                            span
                                                +icon("icon-bus",19,20)
                                    li
                                        label
                                            input(type="checkbox" name="transport" value="bicycle").form__transport-input.visually-hidden
                                            span
                                                +icon("icon-bicycle",26,25)
                                    li
                                        label
                                            input(type="checkbox" name="transport" value="run" checked).form__transport-input.visually-hidden
                                            span
                                                +icon("icon-run",23,24)
                        fieldset
                            legend Левел
                            .form__accordeon-content.form__range-slider.is-open
                                .form__inputs 
                                    .form__input-wrapper
                                        label
                                            input(type="number" name="input-min" id="input-min" min="0" max="100" value="30")
                                    .form__input-wrapper
                                        label
                                            input(type="number" name="input-max" id="input-min" min="0" max="100" value="100")
                                #range-slider
                        button(type="submit") ПОКАЗАТЬ
