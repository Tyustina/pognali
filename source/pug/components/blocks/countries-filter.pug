            { letter: 'У', countries: ['Уганда', 'Узбекистан', 'Украина', 'Уругвай'] },
            { letter: 'Ф', countries: ['Фиджи', 'Филиппины', 'Финляндия', 'Франция'] },
            { letter: 'Х', countries: ['Хорватия'] },
            { letter: 'Ч', countries: ['Чад', 'Черногория', 'Чехия', 'Чили'] },
            { letter: 'Ш', countries: ['Швейцария', 'Швеция', 'Шри-Ланка'] },
            { letter: 'Э', countries: ['Эквадор', 'Эритрея', 'Эсватини', 'Эстония', 'Эфиопия'] },
            { letter: 'Ю', countries: ['ЮАР', 'Южный Судан'] },
            { letter: 'Я', countries: ['Ямайка', 'Япония'] }
        ]

    section.countries-filter
        .countries-filter__container.container
            .countries-filter__buttons
                button(type="button")
                    span Фильтрация по странам
                ul 
                    li 
                        button(type="button") Европа
                    li 
                        button(type="button") Азия
                    li 
                        button(type="button") Америка
                    li 
                        button(type="button") Острова
            ul.countries-filter__list
                each item in alphabetList
                    li.countries-filter__item
                        h3= item.letter
                        ul
                            each country in item.countries
                                li= country
            button(type="button") Свернуть