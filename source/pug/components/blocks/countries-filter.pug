mixin countries-filter()
    - 
        const alphabetList = [
            { letter: 'А', countries: ['Австралия', 'Австрия', 'Азербайджан', 'Албания', 'Алжир', 'Ангола', 'Андорра', 'Антигуа и Барбуда', 'Аргентина', 'Армения', 'Афганистан'] },
            { letter: 'Б', countries: ['Багамские Острова', 'Бангладеш', 'Барбадос', 'Бахрейн', 'Белоруссия', 'Белиз', 'Бельгия', 'Бенин', 'Болгария', 'Боливия', 'Босния и Герцеговина', 'Ботсвана', 'Бразилия', 'Бруней', 'Буркина-Фасо', 'Бурунди', 'Бутан'] },
            { letter: 'В', countries: ['Вануату', 'Великобритания', 'Венгрия', 'Венесуэла', 'Восточный Тимор', 'Вьетнам'] },
            { letter: 'Г', countries: ['Габон', 'Гаити', 'Гайана', 'Гамбия', 'Гана', 'Гватемала', 'Гвинея', 'Гвинея-Бисау', 'Германия', 'Гондурас', 'Гренада', 'Греция', 'Грузия'] },
            { letter: 'Д', countries: ['Дания', 'Джибути', 'Доминика', 'Доминикана'] },
            { letter: 'Е', countries: ['Египет'] },
            { letter: 'З', countries: ['Замбия', 'Зимбабве'] },
            { letter: 'И', countries: ['Израиль', 'Индия', 'Индонезия', 'Иордания', 'Ирак', 'Иран', 'Ирландия', 'Исландия', 'Испания', 'Италия'] },
            { letter: 'К', countries: ['Кабо-Верде', 'Казахстан', 'Камбоджа', 'Камерун', 'Канада', 'Катар', 'Кения', 'Кипр', 'Киргизия', 'Кирибати', 'Китай', 'Колумбия'] },
            { letter: 'Л', countries: ['Лаос', 'Латвия', 'Лесото', 'Либерия', 'Ливан', 'Ливия', 'Литва', 'Лихтенштейн', 'Люксембург'] },
            { letter: 'М', countries: ['Маврикий', 'Мавритания', 'Мадагаскар', 'Малави', 'Малайзия', 'Мали', 'Мальдивы', 'Мальта', 'Марокко'] },
            { letter: 'Н', countries: ['Намибия', 'Науру', 'Непал', 'Нигер', 'Нигерия', 'Нидерланды', 'Никарагуа', 'Новая Зеландия', 'Норвегия'] },
            { letter: 'О', countries: ['ОАЭ', 'Оман'] },
            { letter: 'П', countries: ['Пакистан', 'Палау', 'Панама', 'Папуа - Новая Гвинея', 'Парагвай', 'Перу', 'Польша', 'Португалия'] },
            { letter: 'Р', countries: ['Руанда', 'Румыния', 'Россия'] },
            { letter: 'С', countries: ['Сальвадор', 'Самоа', 'Сан-Марино', 'Саудовская Аравия', 'Сейшелы', 'Сенегал', 'Сербия', 'Сингапур', 'Сирия', 'Словакия', 'Словения', 'США'] },
            { letter: 'Т', countries: ['Таджикистан', 'Таиланд', 'Танзания', 'Того', 'Тонга', 'Тринидад и Тобаго', 'Тувалу', 'Тунис', 'Туркмения', 'Турция'] },
            { letter: 'У', countries: ['Уганда', 'Узбекистан', 'Украина', 'Уругвай'] },
            { letter: 'Ф', countries: ['Фиджи', 'Филиппины', 'Финляндия', 'Франция'] },
            { letter: 'Х', countries: ['Хорватия'] },
            { letter: 'Ч', countries: ['Чад', 'Черногория', 'Чехия', 'Чили'] },
            { letter: 'Ш', countries: ['Швейцария', 'Швеция', 'Шри-Ланка'] },
            { letter: 'Э', countries: ['Эквадор', 'Эритрея', 'Эсватини', 'Эстония', 'Эфиопия'] },
            { letter: 'Ю', countries: ['ЮАР', 'Южный Судан'] },
            { letter: 'Я', countries: ['Ямайка', 'Япония'] }
        ]

    section.countries-filter
        .countries-filter__container.container
            .countries-filter__buttons
                button(type="button").countries-filter__button
                    span Фильтрация по странам
                ul 
                    li 
                        button(type="button") Европа
                    li 
                        button(type="button") Азия
                    li 
                        button(type="button") Америка
                    li 
                        button(type="button") Острова
            .countries-filter__wrapper
                ul.countries-filter__list
                    each item in alphabetList
                        li.countries-filter__item
                            h3= item.letter
                            ul
                                each country in item.countries
                                    li= country
                    button(type="button") Свернуть
        .countries-filter__result 
            .countries-filter__cards
                ul.countries-filter__cards-list
                    li.card.card--offline.countries-filter__card 
                        .card__img-wrapper 
                            +picture("content", "user-1", "png", 285,286,"")
                        .card__level-wrapper
                            .card__big-circle
                                .card__level(style="--level: 99%;")
                                    .card__circle
                                        .card__number 99
                                            .card__label level
                        .countries-filter__card-info
                            .countries-filter__card-wrapper
                                h3 Таня Фирсова
                                ul.countries-filter__card-hashtags 
                                    li #ЗОЖ 
                                    li #ПП 
                                    li #Фитнес 
                                    li #пляж
                                    li #авокадо
                                    li #смузи
                            .countries-filter__card-wrapper
                                ul.countries-filter__card-countries 
                                    li 
                                        +picture("content","sri-lanka-flag","png",35,24,"")
                                        p Шри-ланка
                                    li 
                                        +picture("content","thailand-flag","png",35,24,"")
                                        p Таиланд
                                    li 
                                        +picture("content","seychelles-flag","png",35,24,"")
                                        p Сейшелы
                                ul.countries-filter__card-transport
                                    li 
                                        +icon("icon-plane",24,22)
                                    li
                                        +icon("icon-bus",19,20)
                                    li
                                        +icon("icon-bicycle",26,25)
                                    li
                                        +icon("icon-run",23,24)
                    li.card.card--online.countries-filter__card 
                        .card__img-wrapper 
                            +picture("content", "user-2", "png", 285,285,"")
                        .countries-filter__wrapper
                            .card__big-circle
                                .card__level(style="--level: 80%;")
                                    .card__circle
                                        .card__number 80
                                        .card__label level 
                        .card__info 
                            h3 Петя Демин
                            ul.card__hashtags 
                                li #бургер 
                                li #бар 
                                li #футбол
                                li #концерт
                                li #крафт
                            ul.card__countries 
                                li 
                                    +picture("content","belgium-flag","png",35,24,"")
                                    p Бельгия
                                li 
                                    +picture("content","czech-flag","png",35,24,"")
                                    p Чехия
                            ul.card__transport 
                                li 
                                    +icon("icon-plane",24,22)
                                li 
                                    +icon("icon-bus",19,20)
                                li 
                                    +icon("icon-bicycle",26,25)
                                li
                                    +icon("icon-run",23,24)


            .countries-filter__form
            .countries-filter__pagination 
